{
  "name": "hkust-course-backup",
  "homepage": "https://hkleungai.github.io/HKUST-Course-Backup",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "http-server -c-1 src",
    "link-alias": "yarn tsc-alias --dir src/script",
    "build": "tsc && yarn link-alias",
    "build:watch": "concurrently \"tsc --watch\" \"yarn link-alias --watch\"",
    "clean": "rm src/script/**/*.js",
    "deploy": "gh-pages -d src"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "concurrently": "^7.2.0",
    "dotenv": "^16.0.0",
    "gh-pages": "^3.2.3",
    "http-server": "^14.1.0",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.31",
    "husky": "^8.0.1",
    "tsc-alias": "^1.6.7",
    "typescript": "^4.6.4"
  }
}
