#!/bin/sh

__temp_commit=".temp-commit"
__custom_auto_generated_message="/* THIS IS AN AUTO GENERATED FILE BY COMMIT HOOK. DO NOT TOUCH IT! */\n"

if [ -e $__temp_commit ]
then
  rm $__temp_commit

  # Write Git Log
  __custom_git_log_ts_path="src/script/data/gitLogs.ts"
  touch                     $__custom_git_log_ts_path
  echo "${__custom_auto_generated_message}"                                             \
    >                       $__custom_git_log_ts_path
  echo "const GIT_LOGS = {"                                                             \
    >>                      $__custom_git_log_ts_path
  git log --pretty=format:"  '%ad': '%s'," --date=format:"%Y-%m-%d %H:%M:%S"            \
    >>                      $__custom_git_log_ts_path
  echo "\n};"                                                                           \
    >>                      $__custom_git_log_ts_path
  echo "\nexport default GIT_LOGS;"                                                     \
    >>                      $__custom_git_log_ts_path

  # Write CSS links
  __custom_css_links_css_path="src/script/css/index.css"
  touch                     $__custom_css_links_css_path
  echo "${__custom_auto_generated_message}"                                             \
    >                       $__custom_css_links_css_path
  for file in $(ls src/script/css)
  do
    if [[ "$file" != "index.css" ]]
    then
      echo "@import \"${file}\";"                                                       \
      >>                      $__custom_css_links_css_path
    fi
  done

  # yarn build
  git add                   $__custom_git_log_ts_path                                   \
                            $__custom_css_links_css_path

  git commit --amend -C HEAD --no-verify
fi
